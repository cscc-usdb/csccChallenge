<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-6 offset-3 border rounded bg-white">
            <h3 class="my-3">Edit the Solution</h3>
            <form 
            action="/challenges/<%=challenge._id%>/solutions/<%=solution._id%>?_method=PUT"
             method="POST">
                <div class="form-group">
                    <label for="solution">Solution</label>
                    <textarea name="solution[solution]" rows="15" class="form-control" id="solution"><%=solution.solution%></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<% include ../partials/footer %>